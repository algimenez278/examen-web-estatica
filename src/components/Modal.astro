---
const {
  id = "game-modal",
  title = "TÃ­tulo",
  message = "Mensaje",
  confirmText = "Aceptar",
  showNext = true
} = Astro.props;
---

<div id={id} class="modal hidden" role="dialog" aria-modal="true" aria-labelledby="modal-title">
  <div class="modal-backdrop"></div>
  <div class="modal-content">
    <h2 id="modal-title">{title}</h2>
    <p id="modal-message">{message}</p>
    <div class="modal-buttons">
      <button id="modal-replay" class="modal-confirm">{confirmText}</button>
      <!-- Valid syntax en Astro para condicionales -->
      {showNext ? (
        <button id="modal-next" class="modal-confirm">Siguiente</button>
      ) : null}
    </div>
  </div>
</div>

<style>
  .modal {
    position: fixed;
    inset: 0;
    z-index: 1000;
    display: none;
    align-items: center;
    justify-content: center;
  }

  .modal.show {
    display: flex;
  }

  .modal-backdrop {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.6);
  }

  .modal-content {
    background: var(--base);
    color: var(--letter);
    border-radius: 10px;
    padding: 2rem;
    z-index: 1001;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
    text-align: center;
    max-width: 90%;
    width: 320px;
  }

  .modal-content h2 {
    margin-top: 0;
    color: var(--green);
  }

  .modal-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
  }

  .modal-confirm {
    background-color: var(--blue);
    border: none;
    padding: 0.5rem 1rem;
    color: var(--letter);
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .modal-confirm:hover {
    background-color: var(--sky);
  }
</style>
