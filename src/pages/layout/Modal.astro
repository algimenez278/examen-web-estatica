---
// Modal.astro
const { num, title, code } = Astro.props;
const id = `modal${num}`;
const titleId = `${id}-title`;
---

<style>
  .modal {
    display: none; /* Hidden by default */
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.5);
    align-items: center;
    justify-content: center;
  }

  /* Modal element content */
  .modal__content {
    background-color: #1e1e2e;
    color: #fdfdfd;
    border-radius: 10px;
    padding: 25px 30px;
    width: 90%;
    box-sizing: border-box;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    position: relative;
    overflow-wrap: break-word;
    word-wrap: break-word;
    word-break: break-word;
  }

  /* Modal element close button */
  .modal__close {
    position: absolute;
    top: 10px;
    right: 15px;
    font-size: 24px;
    font-weight: 700;
    color: oklch(0.6741 0.191 42.86); /* naranja */
    cursor: pointer;
    user-select: none;
    background: none;
    border: none;
    padding: 0;
    line-height: 1;
  }

  .modal__close:hover {
    color: oklch(0.7999 0.1559 76.25); /* amarillo */
  }

  .codigo-container {
    max-width: 100%;
    overflow-x: auto;
    background-color: oklch(0.6741 0.191 42.86);
    padding: 1em;
    border-radius: 4px;
    font-family: monospace;
    font-size: 14px;
  }
</style>

<div
  id={id}
  class="modal"
  role="dialog"
  aria-modal="true"
  aria-labelledby={titleId}
  tabindex="-1"
>
  <div class="modal__content">
    <button
      class="modal__close"
      aria-label={`Cerrar modal Card ${num}`}
      data-close={id}
    >
      &times;
    </button>
    <h2 id={titleId}>{title}</h2>

    <div class="codigo-container">
      <pre>
        <code class="language-javascript">{code}</code>
      </pre>
    </div>
  </div>
</div>
