---
import MainLayout from "../../../layouts/MainLayout.astro";
import Rosco from "./Rosco.astro";
---

<MainLayout title="Rosco Dev">

    <Rosco />

<style>
  body {
    background-image: linear-gradient(-45deg, var(--base), var(--base), var(--sky));
    background-size: 400% 400%;
    animation: fontS 20s ease-in-out infinite;
    height: 100vh;
  }

  @keyframes fontS {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
 }
  </style> 

</MainLayout>
