---
// PadlockDigit.astro
const { index } = Astro.props;
---

<style>
  .digit {
    width: 60px;
    height: 90px;
    border: 1px solid var(--blue);
    border-radius: 12px;
    overflow: hidden;
    cursor: pointer;
    box-shadow: inset 0 -6px 10px rgba(0, 0, 0, 0.12);
    background: var(--sky);
    user-select: none;
    position: relative;
  }

  .wheel {
    display: flex;
    flex-direction: column;
    font-size: 48px;
    font-weight: 900;
    color: var(--base);
    line-height: 80px;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: transform;
  }

  @media (max-width: 400px) {
    .digit {
      width: 50px;
      height: 70px;
      line-height: 70px;
    }
    .wheel {
      font-size: 40px;
      line-height: 70px;
    }
  }
</style>

<div
  class="digit"
  role="spinbutton"
  aria-valuemin="0"
  aria-valuemax="9"
  aria-valuenow="0"
  tabindex="0"
  aria-label={`DÃ­gito ${index + 1}`}
>
  <div class="wheel"></div>
</div>
